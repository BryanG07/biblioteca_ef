doctype html
html
  head
    meta(charset="utf-8")
    style
      include ../css/style.css
    title Datos del prestamo

  body
    div.texto
      h1 Biblioteca municipal
      h2 Consultar prestamo 
    div.center
        ul
          li 
            a(href="/") Inicio
          li.dropdown
            a(href="/l") Libros
              div.dropdown-content
                a(href="/l") Lista
                a(href="/agregar_lib") Agregar
          li.dropdown
            a(href="/p") Prestamos
              div.dropdown-content
                a(href="/p") Lista
                a(href="/agregar_pres") Agregar
          div.topnav      
            div.search-container
              input(type="text" placeholder="Buscar..." name="search")
              button(type="submit")
                i.fa Buscar
    hr
    if(mostrar)
      div.center
        table
          tr
            td Nombres:
            td
              p= mostrar.nombre
          tr
            td Apellidos:
            td
              p= mostrar.apellido
          tr
            td Documento de identidad:
            td
              p= mostrar.documento 
          tr  
            td Número de teléfono:
            td
              p=mostrar.telefono
          tr  
            td Libro prestado:
            td
              p=mostrar.libro
    
        
    else
      p No hay información del prestamos
